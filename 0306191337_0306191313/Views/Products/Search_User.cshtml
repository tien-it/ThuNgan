@model IEnumerable<DOAN.Models.Product>



<a asp-action="Index" asp-controller="Home">Back to Home</a>

@if (Model != null)
{
    <div class="khoisanpham" style="display: flex; flex-wrap: wrap; ">
        @foreach (var item in Model)
        {
            <div style="width:20%" class="card">
                <a asp-controller="Products" asp-action="Single_Product" asp-route-id="@item.Id" class="motsanpham"
                   style="text-decoration: none; color: black;" data-toggle="tooltip" data-placement="bottom"
                   title="Lập Kế Hoạch Kinh Doanh Hiệu Quả">
                    <img class="card-img-top anh" src="~/img/product/@item.Image"
                         alt="lap-ke-hoach-kinh-doanh-hieu-qua">
                    <div class="card-body noidungsp mt-3">
                        <h3 class="card-title ten">@item.Name</h3>
                        <small class="tacgia text-muted">@item.Description</small>
                        <div class="gia d-flex align-items-baseline">
                            <div class="giamoi">@{ var b = @item.Price / 1000; var c = @item.Price % 1000;}@b.@c ₫</div>
                            <div class="giacu text-muted">@{ var d = b * 1.2; var e = c; }@d.@e  ₫</div>
                            <div class="sale">-20%</div>
                        </div>
                        <div class="danhgia">
                            <ul class="d-flex" style="list-style: none;">
                                <li class="active"><i class="fa fa-star"></i></li>
                                <li class="active"><i class="fa fa-star"></i></li>
                                <li class="active"><i class="fa fa-star"></i></li>
                                <li class="active"><i class="fa fa-star"></i></li>
                                <li><i class="fa fa-star"></i></li>
                                <li><span class="text-muted">0 nhận xét</span></li>
                            </ul>
                        </div>
                    </div>
                </a>
            </div>
        }
        </div>
        }
        else
        {
        <h4>Không Có Sản Phẩm Phù Hợp</h4>
        }

